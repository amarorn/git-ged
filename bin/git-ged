#!/usr/bin/env ruby

require 'git-ged'
require 'optparse'
require 'subcommand'

class CLI

  def initialize
    @options = {}
    @option_parser = OptionParser.new("git-ged") do |o|
      o.version = "v#{GitGed::VERSION}"
      o.on("-T [level]", /^[0-4]$/) {|x| @options[:T] = x }
    end
  end

  def run argv=[]
    @option_parser.parse! argv
    puts "opts=#{@options.inspect}"
    puts "args=#{argv}"
  end

end

CLI.new.run ARGV
